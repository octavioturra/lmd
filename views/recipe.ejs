<%layout( "_layout")%>
    <div class="row-fluid" data-ng-controller="RecipeCtrl">
        <form method="post" data-nj-submit="save()">
            <%if(recipe._id){%>
                <span data-ng-init="loadRecipe('<%=recipe._id%>')"></span>
            <%}%>
            <div class="col-md-6">
                <fieldset class="panel panel-default">
                    <div class="panel-heading">
                        <h3>Receita</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="name">Nome</label>
                            <input type="text" class="form-control" name="name" id="name" data-ng-model="recipe.name">
                        </div>
                        <div class="form-group">
                            <label for="category">Categoria</label>
                            <select name="category" id="category" class="form-control" data-ng-model="recipe.category">
                                <option>Normal</option>
                                <option>Orgânica</option>
                                <option>Álcoolico</option>
                                <option>Exótica</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="description">Descrição</label>
                            <textarea name="description" id="description" class="form-control" data-ng-model="recipe.description" rows="6"></textarea>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="panel panel-default">
                    <div class="panel-heading">
                        <h3>
                            Autor
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="authorName">Nome</label>
                            <input type="text" class="form-control" id="authorName" name="authorName" data-ng-model="recipe.author[0].name">
                        </div>
                        <div class="form-group">
                            <label for="autorEmail">Email</label>
                            <input type="email" class="form-control" id="autorEmail" name="autorEmail" data-ng-model="recipe.author[0].email">
                        </div>
                        <div class="form-group">
                            <label for="autorSite">Site</label>
                            <input type="url" class="form-control" id="autorSite" name="autorSite" data-ng-model="recipe.author[0].site">
                        </div>
                    </div>
                </fieldset>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <a href="/" class="btn btn-link">Cancelar</a>
                        <button class="btn btn-danger" type="submit">Salvar</button>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <%-partial( 'ingredients')%>
            </div>
            <div class="col-md-6">
                <%-partial( 'steps')%>
            </div>
        </form>
    </div>